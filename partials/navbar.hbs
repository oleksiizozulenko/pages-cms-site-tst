<header class="top js-header">
   <div>
   <a class="logo" href="{{@website.url}}">
      {{#if @website.logo}}
         <img src="{{@website.logo}}" alt="{{@website.name}}" width="{{@website.logoSize.width}}" height="{{@website.logoSize.height}}">
      {{else}}
         {{@website.name}}
      {{/if}}
   </a>
   <h1 class="sr-only">{{@website.name}}</h1>
   {{#if menus.localeSwitcher}}
      {{> menu menus.localeSwitcher}}
   {{/if}}
   </div>
   <div>
   {{#if menus.mainMenu}}
      {{> menu menus.mainMenu}}
   {{/if}}
   </div>

</header>
