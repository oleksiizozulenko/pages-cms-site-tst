<header class="top js-header">
   <div>
      <a class="logo" href="{{@website.url}}">
         {{#if @website.logo}}
         <img src="{{@website.logo}}" alt="{{@website.name}}" width="{{@website.logoSize.width}}"
            height="{{@website.logoSize.height}}">
         {{else}}
         {{@website.name}}
         {{/if}}
      </a>
      <h1 class="sr-only">
         {{#checkIf @config.page.langpage '==' 1 }}
         {{#if @config.custom.brandName}}
         {{ @config.custom.brandName }}
         {{/if}}
         {{/checkIf}}

         {{#checkIf @config.page.langpage '==' 0 }}
         {{#if @config.custom.brandNameEn}}
         {{ @config.custom.brandNameEn }}
         {{/if}}
         {{/checkIf}}

      </h1>

      <div class="nav-toggle js-nav-toggle" aria-label="Toggle navigation" aria-expanded="false" role="button"
         tabindex="0">
         <span class="nav-toggle__bar">UA</span>
         <span class="nav-toggle__bar">EN</span>
      </div>
   </div>
   <div>
      {{#checkIf @config.page.langpage '==' 1 }}
      {{#if menus.mainMenu}}
      {{> menu menus.mainMenu}}
      {{/if}}
      {{/checkIf}}

      {{#checkIf @config.page.langpage '==' 0 }}
      {{#if menus.mainEnMenu}}
      {{> menu menus.mainEnMenu}}
      {{/if}}
      {{/checkIf}}

      {{#checkIf @config.post.langpage '==' 1 }}
      {{#if menus.mainMenu}}
      {{> menu menus.mainMenu}}
      {{/if}}
      {{/checkIf}}

      {{#checkIf @config.post.langpage '==' 0 }}
      {{#if menus.mainEnMenu}}
      {{> menu menus.mainEnMenu}}
      {{/if}}
      {{/checkIf}}
   </div>

</header>